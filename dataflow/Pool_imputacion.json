{
	"name": "Pool_imputacion",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"linkedService": {
						"referenceName": "AzureDataLakeStorageXX",
						"type": "LinkedServiceReference"
					},
					"name": "CargaDatos"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "pool",
						"type": "DatasetReference"
					},
					"name": "sinkImputacionPool"
				}
			],
			"transformations": [
				{
					"name": "imputacion"
				}
			],
			"scriptLines": [
				"source(output(",
				"          PID as integer,",
				"          PoolArea as integer,",
				"          PoolQC as string",
				"     ),",
				"     useSchema: false,",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     format: 'delimited',",
				"     fileSystem: 'preliminarcontainer',",
				"     folderPath: 'mongo_in',",
				"     fileName: 'pool.csv',",
				"     columnDelimiter: ',',",
				"     escapeChar: '\\\\',",
				"     quoteChar: '\\\"',",
				"     columnNamesAsHeader: true) ~> CargaDatos",
				"CargaDatos derive(each(match(type=='string'), $$ = iif(     isNull($$) || $$ == '',     'NA',     $$ )),",
				"          each(match(type=='integer'||type=='long'||type=='decimal'||type=='double'), $$ = iif(     isNull($$) || isNan($$),     0,     $$ ))) ~> imputacion",
				"imputacion sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sinkImputacionPool"
			]
		}
	}
}